[Unit]
Description=Arrakis Ingress
After=docker.service
Requires=docker.service

[Service]
Type=simple
User=rshnbhatia
WorkingDirectory=/home/rshnbhatia/github/roshbhatia/arrakis-ingress
ExecStart=/usr/bin/docker compose -f /home/roshbhatia/github/other/arrakis-ingress/docker-compose.yaml up
ExecStop=/usr/bin/docker compose -f /home/roshbhatia/github/other/arrakis-ingress/docker-compose.yaml down
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target