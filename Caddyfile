{
	auto_https disable_redirects
}

# Provide non-root users access to fetch certificate
# Ensure TS_PERMIT_CERT_UID is set to the appropriate user in /etc/default/tailscaled

# Static file server and service routes
arrakis.stork-eel.ts.net {
	root * /var/www
	file_server

	route /grafana* {
		reverse_proxy localhost:3000
	}

	route /plex* {
		reverse_proxy localhost:32400
	}

	route /overseerr* {
		reverse_proxy localhost:5055
	}

	route /nzbget* {
		reverse_proxy localhost:6789
	}

	route /sonarr* {
		reverse_proxy localhost:8989
	}

	route /radarr* {
		reverse_proxy localhost:7878
	}
}
